// NoSQL: MongoDB
// Replication:
// - master-slave (async)
// - replication factor: 3 for hot and warm storage (SSD) and 2 for cold storage (HDD)
//
// Sharding:
// - key based on user_id
// - consistent hashing + virtual shards

Table posts {
  id uuid [primary key]
  user_id uuid
  title varchar
  text text [note: 'Content of the post']
  location_id uuid
  created_at timestamp
  attachment_urls array  // de-normalizing for quick access to attachments
  comment_ids array  // de-normalizing for quick access to comments and reactions
}

table attachments {
  id uuid [primary key]
  user_id uuid
  post_id uuid
  url varchar
  size int
  created_at timestamp
}

Ref: attachments.post_id > posts.id